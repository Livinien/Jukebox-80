{% extends 'base.html.twig' %}

{% block title %}JUKEBOX 80 - CONNEXION{% endblock %}

{% block content %}


{# FORMULAIRE DE CONNEXION #}

<div class="image-background-connexion">

    <h1 class="font-weight-normal mb-5 pt-5 d-flex justify-content-center">Connexion</h1>

    <form class="formulaire-connexion mt-5 m-5 w-75" method="post">
        {% if error %}
            <div class="alert alert-danger ms-5 w-50">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}


        <label class="mb-2 ms-5" for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control w-50 ms-5" autocomplete="email" placeholder="Entrez votre adresse email" required autofocus>

        <label class="mt-3 mb-2 ms-5" for="inputPassword">Mot de Passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control ms-5 w-50" autocomplete="current-password" placeholder="Entrez votre mot de passe" required>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}">
        

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-primary mt-4 ms-5" type="submit">
            Connexion
        </button>

    </form>

</div>

{% endblock %}
